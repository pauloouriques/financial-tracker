<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_large_horizontal_margin"
    android:clickable="true">

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/user_picture_riv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user"/>

    </FrameLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/activity_large_horizontal_margin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_regular"
                android:id="@+id/user_name_tv"
                android:textAllCaps="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark"
                android:id="@+id/user_role_tv"
                android:textAllCaps="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:maxLines="1" />

    </LinearLayout>

</LinearLayout>